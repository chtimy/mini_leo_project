const MAP_SCENE = preload(\"res://RPGFightFramework/map_modeler/map_modeller.tscn\")
const MAP3D_CLASS = preload(\"res://RPGFightFramework/scripts/mapMatrix3D.gd\")

var m_map

func _init():
	m_map = MAP3D_CLASS.new(MAP_SCENE.instance())
	
func _ready():
	var menuButtons = get_node(\"VBoxContainer/MenuButton\")
	var popup = menuButtons.get_popup()
	popup.add_item(\"Carte\")
	popup.add_item(\"Personnage\")
	popup.connect(\"id_pressed\", self, \"on_id_pressed\")
	get_node(\"VBoxContainer/ViewportContainer/Viewport\").add_child(m_map)
	m_map.get_node(\"Modelleur\").set_visible(false)
	m_map.set_process(false)
	
func on_id_pressed(var id):
	if id == 0:
		m_map.get_node(\"Modelleur\").set_visible(true)
		get_node(\"VBoxContainer/ViewportContainer/Viewport\").connect(\"mouse_entered\", self, \"on_viewportEntered\")
		get_node(\"VBoxContainer/ViewportContainer/Viewport\").connect(\"mouse_exited\", self, \"on_viewportExited\")
		
#ne marche pas
func on_viewportEntered():
	print(\"test\")
	m_map.set_process(true)
	
func on_viewportExited():
	print(\"exit\")
	m_map.set_process(false)"

