resource_name = "map_layout_modeler"
script/source = "extends Control

signal changeMapLayout

const MAP_SCENE = preload(\"res://RPGFightFramework/scenes/modeleur/map_modeler.tscn\")
const PARENT_SCRIPT = \"res://RPGFightFramework/scripts/modeler/mapLayout/parentScene.gd\"

var m_map
var m_lastClickPositionInMap
var m_modeler
var m_viewportSize

func init(var modeler):
	m_modeler = modeler

func _ready():
	m_map = MAP_SCENE.instance()
	get_node(\"VBoxContainer/HBoxContainer/ViewportContainer/Viewport\").add_child(m_map)
	m_map.set_process(true)
	
	m_viewportSize = get_viewport().get_size()
	
	get_node(\"VBoxContainer/HBoxContainer/ViewportContainer\").connect(\"mouse_entered\", self, \"on_viewportEntered\")
	get_node(\"VBoxContainer/HBoxContainer/ViewportContainer\").connect(\"mouse_exited\", self, \"on_viewportExited\")
	
	get_node(\"VBoxContainer/Tree\").connect(\"changeMapLayout\", self, \"on_changeMapLayout\")
	self.connect(\"changeMapLayout\", m_modeler, \"on_changeMapLayout\")
	print(\"connect : \", self)
	
func on_viewportEntered():
	m_map.set_process(true)
	
func on_viewportExited():
	m_map.set_process(false)
	
func _on_SaveButton_button_up():
	m_map.saveOverlaySelection()

func _input(event):
	if event is InputEventMouseButton:
		if event.get_button_index() == BUTTON_LEFT && event.pressed == false:
			var index = m_map.positionToIndex(m_map.getIntersectionPoint(m_map.getMousePosition()))
			if m_map.addOverlaySelection(index):
				var tree = get_node(\"VBoxContainer/Tree\")
				var child = tree.create_item(tree.get_root())
				child.set_text(0, String(index.abs()))
				accept_event()
		elif event.get_button_index() == BUTTON_RIGHT && event.pressed== false:
			m_lastClickPositionInMap = m_map.getMousePosition()
			if m_map.isOverlayCellAtIndex(m_map.positionToIndex(m_map.getIntersectionPoint(m_lastClickPositionInMap))):
				var popupMenu = get_node(\"PopupMenu\")
				popupMenu.set_position(get_viewport().get_mouse_position())
				# Modification of the submenu group, add existent group
				var tree = get_node(\"VBoxContainer/Tree\")
				var indexCell = m_map.positionToIndex(m_map.getIntersectionPoint(m_lastClickPositionInMap))
				popupMenu.buildSubMenuGroup(indexCell.abs())
				
				popupMenu.set_visible(true)
				set_process_input(false)
#				accept_event()

func on_changeMapLayout(var scene):
#	call_deferred(\"addSpriteScene\", scene)
	var viewport = get_node(\"VBoxContainer/HBoxContainer/ViewportContainer/Viewport\")
	var sprite = TextureRect.new()
	sprite.set_texture(viewport.get_texture())
	sprite.set_expand(true)
	scene.get_node(\"VBoxContainer/HBoxContainer/ScrollContainer\").set_custom_minimum_size(m_viewportSize * Vector2(0.1, 0.1))
	sprite.set_custom_minimum_size(m_viewportSize * Vector2(0.1, 0.1))
	sprite.set_script(load(PARENT_SCRIPT))
	sprite.m_parent = self
	sprite.connect(\"sprite_input\", self, \"on_sprite_input\")
	scene.get_node(\"VBoxContainer/HBoxContainer/ScrollContainer/VBoxContainer\").add_child(sprite)
	scene.addParentLevelSprites(get_node(\"VBoxContainer/HBoxContainer/ScrollContainer/VBoxContainer\"))
	emit_signal(\"changeMapLayout\", scene)

func addParentLevelSprites(var node):
	var children = node.get_children()
	for i in range(children.size()):
		get_node(\"VBoxContainer/HBoxContainer/ScrollContainer/VBoxContainer\").add_child(children[children.size() - i - 1].duplicate())
func on_sprite_input(var sprite):
	var positionOrder = sprite.get_position_in_parent()
	var parent = sprite.get_parent()
	for i in range(positionOrder+1):
		var spriteToDelete = parent.get_child(positionOrder - i)
		parent.remove_child(spriteToDelete)
		spriteToDelete.queue_free()
	emit_signal(\"changeMapLayout\", sprite.m_parent)"
