script/source = "extends Control

signal changeMapLayout

const MAP_LAYOUT_SCENE = preload(\"res://RPGFightFramework/scenes/modeleur/map_layout.tscn\")
var m_mapLayout
	
func _ready():
	get_node(\"VBoxContainer\").set_size(get_viewport().get_size())
	
	m_mapLayout = MAP_LAYOUT_SCENE.instance()
	get_node(\"VBoxContainer\").add_child(m_mapLayout)
	m_mapLayout.set_visible(false)
	m_mapLayout.set_process_input(false)
	
	var menuButtons = get_node(\"VBoxContainer/MenuButton\")
	var popup = menuButtons.get_popup()
	popup.add_item(\"Carte\")
	popup.add_item(\"Personnage\")
	popup.connect(\"id_pressed\", self, \"on_id_pressed\")
	
	set_process(true)
	
func _process(var delta):
	pass
	
func on_id_pressed(var id):
	if id == 0:
		m_mapLayout.set_visible(true)
		m_mapLayout.set_process_input(true)
		
func on_changeMapLayout(var scene):
	get_node(\"VBoxContainer\").remove_child(m_mapLayout)
	m_mapLayout = scene
	m_mapLayout.init(self)
	get_node(\"VBoxContainer\").add_child(m_mapLayout)
	
